%%%%%%%%%%%%%%%%
%%% TSSAR options
%%%%%%%%%%%%%%%%
dir_out_parent                           = $TESTBENCH/process_rsmas_Alos_multi/
inputdataopt.readFormat                  = single
inputdataopt.topo                        = $ROIPAC_TESTDATA/process_rsmas_Alos_multi/ROIPAC_DEMS/echaussard/Kerinci/Kerinci_30m.dem
inputdataopt.interf                      = $TESTBENCH/process_rsmas_Alos_multi/process/SumatraKerinciT446AlosA/DONE/P*/geo_*.unw
inputdataopt.bllist                      = $TESTBENCH/process_rsmas_Alos_multi/process/SumatraKerinciT446AlosA/DONE/bl_list.txt

inputdataopt.seed                        = max 
inputdataopt.cortresh                    = 0.3
inputdataopt.percentcortresh             = 70
inputdataopt.Tcortresh                   = 0
inputdataopt.APSspatial                  = 20   % In pixels
inputdataopt.APStemporal                 = 200  % In days

inputdataopt.rateopt.method			     = linear
inputdataopt.rateopt.time_range		     = [2003 2008]

%inputdataopt.removeplane.poly.x         = [50 350 350 50;150 150 350 350;280 280 350 350]
%inputdataopt.removeplane.poly.y         = [150 150 300 300;440 600 600 440;300 380 380 300]
inputdataopt.removeplane.method          = secondorderpolyn
inputdataopt.removeplane.filter_outliers = on
 
%runningopt.check_interferograms = yes
%runningopt.check_curl        = yes
%runningopt.check_ampcorrmask = yes

runningopt.remove_plane       = yes
runningopt.tempcorrmask       = yes
runningopt.topo_error         = yes
runningopt.timeseries         = yes

%runningopt.gpsfit            = yes
runningopt.APS                = yes
%displayopt.baselineplot      = yes
%displayopt.timeseries        = yes

